<Page
    x:Class="FlygoApp.Views.RedcapTaskListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlygoApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/Planesample1.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="140,43,0,0" VerticalAlignment="Top" Width="400">
            <TextBlock x:Name="textBlock4" TextWrapping="Wrap" Text="Fly Information" FontWeight="Bold" FontStyle="Italic" FontSize="35" Margin="0,20,0,0"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="701,43,0,0" VerticalAlignment="Top" Width="400">
            <TextBlock x:Name="textBlock5" TextWrapping="Wrap" Text="Worker Information" FontWeight="Bold" FontStyle="Italic" FontSize="35" Margin="0,20,0,0"/>
        </StackPanel>
        <ListView x:Name="ListWorkerInformation" HorizontalAlignment="Left" Height="430" Margin="701,165,0,0" VerticalAlignment="Top" Width="400" Background="#9BDCDCDC"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="436" VerticalAlignment="Top" Width="400" Margin="140,165,0,0" Background="#99DCDCDC"/>

    </Grid>
</Page>
